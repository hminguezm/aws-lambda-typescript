{
  "name": "aws-lambda-typescript",
  "private": true,
  "version": "1.0.0",
  "description": "aws-lambda-typescript template",
  "dependencies": {
    "@types/jest": "^26.0.4",
    "aws-lambda": "^1.0.6",
    "aws-sdk": "^2.713.0",
    "serverless": "^1.74.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.6"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/aws-lambda": "^8.10.59",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "babel-jest": "^26.1.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-module-resolver": "^0.17.0",
    "fork-ts-checker-webpack-plugin": "^5.0.7",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "serverless-offline": "^6.4.0",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-webpack": "^5.3.2",
    "ts-loader": "^8.0.0",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack": "^4.43.0",
    "webpack-node-externals": "^2.3.0"
  },
  "scripts": {
    "start": "yarn run serverless:start",
    "start:dev": "concurrently -k -s first --names \"LINT,PRET,TEST,APP\" -p \"[{name}]\" \"yarn run lint:watch\" \"yarn run prettier:watch\" \"yarn run jest:watch\" \"yarn run start\"",
    "start:dev:docker": "concurrently -k -s first --names \"TEST,APP\" -p \"[{name}]\" \"yarn run jest:watch\" \"yarn run serverless:debug:docker\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "jest": "NODE_ENV=test ./node_modules/.bin/jest --ci --color --detectOpenHandles --forceExit --verbose",
    "jest:watch": "yarn run jest --watch",
    "test:integration": "yarn run jest --roots=tests/integration",
    "prettier": "prettier --write \"src/**/*.ts\"",
    "prettier:watch": "onchange 'src/**/*.{js,ts}' -- prettier --write {{changed}}",
    "debug": "yarn run serverless:debug",
    "deploy": "yarn run serverless:deploy",
    "serverless:start": "env | grep ENV; export SLS_DEBUG=* && ./node_modules/.bin/serverless offline start",
    "serverless:debug": "env | grep ENV; export SLS_DEBUG=* && node --inspect=0.0.0.0:9229 ./node_modules/.bin/serverless offline start --noTimeout",
    "serverless:debug:docker": "env | grep ENV; export SLS_DEBUG=* && node --inspect=0.0.0.0:9229 ./node_modules/.bin/serverless offline start --noTimeout --webpack-use-polling --host 0.0.0.0 --location .webpack/service",
    "serverless:deploy": "export SLS_DEBUG=* && ./node_modules/.bin/serverless deploy --verbose"
  }
}
